# Pytorch
export LD_LIBRARY_PATH=/usr/local/lib/python3.6/dist-packages/torch/lib:$LD_LIBRARY_PATH
export LIBRARY_PATH=/usr/local/lib/python3.6/dist-packages/torch/lib:$LIBRARY_PATH
export CPATH=/usr/local/lib/python3.6/dist-packages/torch/include:$CPATH
export PYTHONPATH=/usr/local/lib/python3.6/site-packages/:$PYTHONPATH

